{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/lib",
  "lib": {
    "entryFile": "src/public-api.ts",
    "cssUrl": "inline"
  },
  "assets": [
    { "input": "src/lib/core", "glob": "**/*.scss", "output": "lib/core" },
    { "input": "src/lib/core", "glob": "**/*.css", "output": "lib/core" }
  ]
}
